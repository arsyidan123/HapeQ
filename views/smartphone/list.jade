extends ../layout/base 
block content 
	section.content-header 
		img(src='/adminlte/dist/img/caknun.png',alt='LogoBrand', width=150, height=150, style="display: block; margin:auto")
	section.content
		.box
			.box-header.with-border
				h3.box-title
					| JIDAN PHONE
				.box-tools.pull-right
					button(type='button', data-widget='collapse', data-toggle='tooltip',title='collapse').btn.btn-box-tool
						i.fa.fa-minus
			.box-body
				- if(messages.msg_info)
					.alert.alert-success.alert-dismissable
						button.close(type='button', data-dismiss='alert', aria-hidden='true')
							| ×
						h4
							i.icon.fa.fa-check
							| Success!
						| !{messages.msg_info}
				- if(messages.msg_error)
					.alert.alert-danger.alert-dismissable
						button.close(type='button', data-dismiss='alert', aria-hidden='true')
							| ×
						h4
							i.icon.fa.fa-ban
							| Alert!
						| !{messages.msg_error}
				a(href='/smartphone/add').pull-left.btn.btn-primary
					i.fa.fa-plus 
					|  Handphone
				.data-table
					table.table.table-bordered
						tr
							th
								| No
							th
								| Gambar
							th
								| Seri Smartphone
							th
								| Prosesor
							th
								| Jumlah Ram
							th
								| Harga 
							th
								| Action
							if messages.msg_error
								| !{messages.msg_error}
							else
								for row, index in data 
									tr
										td #{index+1}
										td 
											img(src="/images/uploads/#{row.gambar}" height=180 width=200 style="border-radius:5px")
										td #{row.seri}
										td #{row.prosesor}
										td #{row.jumlah_ram}
										td #{row.harga}
										td
											div(style='display:inline-block')
												a(href='/smartphone/edit/#{row.id}').btn.btn-sm.btn-primary
														i.fa.fa-edit
											| 
											div(style='display:inline-block')
												form(method='post', action='/smartphone/delete/#{row.id}')
													input(type="hidden",name="_method", value="DELETE")
													button.btn.btn-sm.btn-danger(type='submit')
														i.fa.fa-remove
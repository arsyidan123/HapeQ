extends ../layout/base
block content
    section.content-header

    section.content
        .box
            .box-header.with-border
                h3.box-title
                    | JIDAN PHONE
                .box-tools.pull-right
                    button(type='button', data-widget='collapse', data-toggle='tooltip',title='collapse').btn.btn-box-tool
                        i.fa.fa-minus

            .box-body
                form(role='form',method='post' action='/smartphone/add' enctype='multipart/form-data')
                    .row
                        .col-xs-6
                            .box-body
                                - if (messages.msg_error)
                                    .alert.alert-danger.alert-dismissable
                                        button.close(type='button', data-dismiss='alert', aria-hidden='true')
                                            | Ã—
                                        h4
                                            i.icon.fa.fa-ban
                                            | Alert!
                                        | !{messages.msg_error}
                                .form-group
                                    label
                                        | Seri Smartphone
                                    input(type='text',name='seri', placeholder='Seri Smartphone', autofocus).form-control
                                .form-group
                                    label
                                        | Prosesor
                                    input(type='text',name='prosesor',placeholder='Prosesor').form-control
                                .form-group
                                    label
                                        | Jumlah Ram
                                    input(type='text',name='jumlah_ram',placeholder='Jumlah Ram').form-control
                                .form-group
                                    label
                                        | Harga
                                    input(type='text',name='harga',placeholder='Harga').form-control
                                .form-group
                                    label
                                        | Stok
                                    input(type='text',name='stok',placeholder='Stok').form-control
                                .form-group
                                    label
                                        | Gambar
                                    input(type='file',name='gambar',placeholder='Gambar').form-control
                            .box-footer
                                button(type='submit').btn.btn-primary
                                    | Submit

                                a(href='/smartphone').btn.btn-primary.pull-right
                                    | Back